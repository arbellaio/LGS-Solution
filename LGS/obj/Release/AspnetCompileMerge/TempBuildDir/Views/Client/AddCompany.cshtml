        var iFrame1 = mapDiv1.getElementsByTagName("iframe")[0];
        iFrame1.width = "800px";
        iFrame1.height = "500px";


        //End Company Map Resize

        // Color Change on Account Transaction Tab Click
        $('#timelineTab').click(function () {
            //            alert('I am in timeline');
