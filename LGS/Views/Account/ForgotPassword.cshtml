@model LGS.Models.ForgotPasswordViewModel
@{
    Layout = "../Shared/_LayoutAccount.cshtml";
    ViewBag.Title = "Forgot your password?";
}

<div class="lockscreen-wrapper">
    <div class="lockscreen-logo">
        <a href="../../index2.html"><b>LGS</b>LTE</a>
    </div>
    <!-- User name -->
    <div class="lockscreen-name"></div>

    <!-- START LOCK SCREEN ITEM -->
    <div class="lockscreen-item">
        <!-- lockscreen image -->
        <div class="lockscreen-image">
            <img src="/favicon.ico" alt="Web App Ico">
        </div>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {@class = "lockscreen-credentials"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new {@class = "text-danger"})

            <div class="input-group">

                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "Enter Email"})
                <div class="input-group-btn">
                    <button type="submit" class="btn">
                        <i class="fa fa-arrow-right text-muted"></i>
                    </button>
                </div>
            </div>
        }
    </div>
    <!-- /.lockscreen-item -->
    <div class="help-block text-center">
        Enter your email to reset your password
    </div>
    <div class="text-center">
        <a href="/Account/Login">Or sign in as a different user</a>
    </div>
    <div class="lockscreen-footer text-center">
        Copyright &copy; @DateTime.Today.Year
        <b>
            <a href="" class="text-black">LGS LTE</a>
        </b><br>
        All rights reserved
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}