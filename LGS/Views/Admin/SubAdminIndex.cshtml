@using LGS.AppProperties
@model LGS.Models.AdminViewModels.DashboardViewModels.DashboardViewModel
@{
    ViewBag.Title = "SubAdmins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>
        Admin Dashboard
